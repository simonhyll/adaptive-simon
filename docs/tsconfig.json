{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@fragments/*": ["src/fragments/*"],
      "@packages/*": ["../packages/*"],
      "@docker/*": ["../docker/*"]
    }
  }
}
